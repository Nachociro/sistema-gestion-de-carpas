generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TentStatus {
  good
  needs_repair
  missing_items
}

model Tent {
  id            String     @id @default(cuid())
  name          String
  model         String
  capacity      Float
  status        TentStatus
  condition     String
  lastInspected DateTime
  missingItems  String @default("[]")
  damagedItems  String @default("[]")
  location      String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
